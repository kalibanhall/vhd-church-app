# MyChurchApp - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# API Backend URL
NEXT_PUBLIC_API_URL="https://your-api-backend.com/v1"

# Database (PostgreSQL for production, SQLite for development)
DATABASE_URL="postgresql://user:password@host:5432/database"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# JWT Configuration
JWT_SECRET="your-secure-jwt-secret-minimum-32-characters"
JWT_EXPIRES_IN="7d"

# NextAuth
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# APP CONFIGURATION
# =============================================================================

NEXT_PUBLIC_APP_NAME="MyChurchApp"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NODE_ENV="development"

# Church Information
CHURCH_NAME="MyChurchApp"
CHURCH_ADDRESS="Your Church Address"
CHURCH_PHONE="+243 00 000 00 00"
CHURCH_EMAIL="contact@mychurchapp.com"

# =============================================================================
# OPTIONAL VARIABLES
# =============================================================================

# Email Configuration
# EMAIL_SERVER="smtp://your-email-server.com:587"
# EMAIL_FROM="noreply@mychurchapp.com"

# Cloudinary (for image uploads)
# CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="your-api-key"
# CLOUDINARY_API_SECRET="your-api-secret"

# Stripe (for payments)
# STRIPE_PUBLISHABLE_KEY="pk_test_..."
# STRIPE_SECRET_KEY="sk_test_..."