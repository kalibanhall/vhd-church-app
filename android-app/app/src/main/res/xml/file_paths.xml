<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 
        File Paths Configuration for FileProvider
        Defines paths that can be shared with other apps
    -->
    
    <!-- Internal storage files directory -->
    <files-path 
        name="files" 
        path="." />
    
    <!-- Cache directory -->
    <cache-path 
        name="cache" 
        path="." />
    
    <!-- External storage root -->
    <external-path 
        name="external" 
        path="." />
    
    <!-- External files directory -->
    <external-files-path 
        name="external_files" 
        path="." />
    
    <!-- External cache directory -->
    <external-cache-path 
        name="external_cache" 
        path="." />
    
    <!-- Specific subdirectories -->
    <files-path 
        name="images" 
        path="images/" />
    
    <files-path 
        name="documents" 
        path="documents/" />
    
    <cache-path 
        name="temp" 
        path="temp/" />
</paths>
