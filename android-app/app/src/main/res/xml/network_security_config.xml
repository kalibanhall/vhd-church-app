<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 
        Network Security Configuration
        Defines security settings for network connections
    -->
    
    <!-- Base configuration for all connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certificate authorities -->
            <certificates src="system" />
            <!-- Trust user-added certificate authorities (for debugging) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- 
        Development configuration
        Allows cleartext HTTP for local development only
        Remove or modify for production
    -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Local development servers -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        
        <!-- Add your local development IP here if needed -->
        <!-- <domain includeSubdomains="true">192.168.x.x</domain> -->
    </domain-config>
    
    <!-- 
        Production configuration
        All production domains should use HTTPS
        Uncomment and configure for your production backend
    -->
    <!--
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">yourdomain.com</domain>
        <domain includeSubdomains="true">api.yourdomain.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    -->
</network-security-config>
