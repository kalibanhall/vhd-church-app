<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!-- 
        Data Extraction Rules for Android 12+ (API 31+)
        Controls what data can be extracted from the app for backup/restore
    -->
    
    <cloud-backup>
        <!-- Include user preferences and app settings -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="."/>
        
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="secure_prefs.xml"/>
        <exclude domain="database" path="facenet.tflite"/>
        <exclude domain="file" path="cache/"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Same rules apply for device-to-device transfer -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="."/>
        
        <exclude domain="sharedpref" path="secure_prefs.xml"/>
        <exclude domain="database" path="facenet.tflite"/>
        <exclude domain="file" path="cache/"/>
    </device-transfer>
</data-extraction-rules>
